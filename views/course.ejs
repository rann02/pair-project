<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
    <title>Courses Page</title>
</head>

<body>
    <form action="/courses" method="get">
        <select name="filter">
            <option disabled selected>Select one to filter</option>
            <% filterValues.forEach(el => { %>
             <option value="<%= el.name %>"><%= el.name %></option>
            <% }) %>
        </select>
        <button>Filter</button>
    </form>
    <a href="/courses">Back</a>
    <div style="display: flex; justify-content: space-around;">
        <% data.forEach(el=> { %>
            <div class="card shadow-sm p-3 mb-5 bg-body-tertiary rounded" style="width: 18rem;"> 
                <div class="card-body">
                    <h5 class="card-title">
                        <%= el.name %>
                    </h5>
                    <h6 class="card-subtitle mb-2 text-muted">
                        <%= timeFormating(el.duration) %>
                    </h6>
                    <h6 class="card-subtitle mb-2 text-muted">
                        <%= el.rating %>
                    </h6>
                    <h6 class="card-subtitle mb-2 text-muted">
                        <%= rupiah(el.price) %>
                    </h6>
                    <p class="card-text">
                        <%= el.description %>
                    </p>
                    <a href="#" class="card-link">Add Cart</a>
                    <a href="#" class="card-link">Another link</a>
                </div>
            </div>
            <% }) %>
    </div>
</body>

</html>