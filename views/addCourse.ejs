<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
    <title>Add Course</title>
</head>

<body>
    <form method="post" action="/courses/teacher/add">
        <fieldset style="width: 40%; margin: 50px auto;">
            <legend>Add Course</legend>
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input name="name" type="text" id="name" class="form-control" placeholder="Course Name">
            </div>
            <div class="mb-3">
                <label for="duration" class="form-label">Duration</label>
                <input type="number" name="duration" id="duration" class="form-control" placeholder="Minutes">
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="price" id="price" class="form-control" placeholder="Price">
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Course Category</label>
                <select id="category" class="form-select" name="CategoryId">
                    <option disabled selected>Select One</option>
                    <% data.forEach(el=> { %>
                        <option value="<%= el.id %>">
                            <% console.log(data) %>
                            <%= el.name %>
                        </option>
                        <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" rows="3" name="description"></textarea>
            </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </fieldset>
    </form>
</body>

</html>